@model PracticaProgramada2.Models.Videojuego
@{
    ViewData["Title"] = "Detalle del Videojuego";
}
<h2>Detalle del Videojuego</h2>
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.Mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="card mb-3" style="max-width: 800px;">
    <div class="row g-0">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath"
                     class="img-fluid rounded-start"
                     alt="@Model.Titulo"
                     onerror="this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%27200%27 height=%27200%27%3E%3Crect fill=%27%23ddd%27 width=%27200%27 height=%27200%27/%3E%3Ctext fill=%27%23999%27 x=%2750%25%27 y=%2750%25%27 dominant-baseline=%27middle%27 text-anchor=%27middle%27%3ESin imagen%3C/text%3E%3C/svg%3E';">
            }
            else
            {
                <div class="text-center p-5 bg-light">
                    <p>Sin imagen</p>
                </div>
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Titulo</h5>
                <p class="card-text">
                    <strong>Plataforma:</strong> @Model.Plataforma<br>
                    <strong>Género:</strong> @(Model.Genero?.Nombre ?? "N/A")<br>
                    <strong>Precio:</strong> ₡@Model.Precio.ToString("N2")
                </p>
            </div>
        </div>
    </div>
</div>
<div class="mb-3">
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
        Editar
    </a>
    <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn btn-danger">
        Eliminar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        Volver al listado
    </a>
</div>
<hr class="my-4">
@if (Model.Comentarios != null && Model.Comentarios.Any())
{
    <h3>Comentarios (@Model.Comentarios.Count)</h3>

    @foreach (var comentario in Model.Comentarios)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= comentario.Valoracion)
                                {
                                    <span class="text-warning">⭐</span>
                                }
                                else
                                {
                                    <span class="text-muted">☆</span>
                                }
                            }
                            <span class="ms-2 text-muted">(@comentario.Valoracion/5)</span>
                        </div>
                    </div>
                    <small class="text-muted">@comentario.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
                <p class="card-text">@comentario.TextoComentario</p>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info">
        No hay comentarios aún. ¡Sé el primero en comentar!
    </div>
}