@model PracticaProgramada2.Models.Videojuego
@{
    ViewData["Title"] = "Eliminar Videojuego";
}

<h2>Eliminar Videojuego</h2>

<div class="alert alert-danger">
    <h4>¿Está seguro que desea eliminar este videojuego?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Plataforma</dt>
            <dd class="col-sm-9">@Model.Plataforma</dd>

            <dt class="col-sm-3">Género</dt>
            <dd class="col-sm-9">@(Model.Genero?.Nombre ?? "Sin género")</dd>

            <dt class="col-sm-3">Precio</dt>
            <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <dt class="col-sm-3">Imagen</dt>
                <dd class="col-sm-9">
                    <img src="@Model.ImagePath" alt="@Model.Titulo" style="max-width: 200px;" class="img-thumbnail">
                </dd>
            }
        </dl>
    </div>
</div>

<form asp-action="EliminarConfirmado" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>