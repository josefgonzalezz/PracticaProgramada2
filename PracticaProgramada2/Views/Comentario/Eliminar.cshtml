@model PracticaProgramada2.Models.Comentario
@{
    ViewData["Title"] = "Eliminar Comentario";
}

<h2>Eliminar Comentario</h2>

<div class="alert alert-danger">
    <h4>¿Está seguro que desea eliminar este comentario?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Videojuego</dt>
            <dd class="col-sm-9">@(Model.Videojuego?.Titulo ?? "N/A")</dd>

            <dt class="col-sm-3">Comentario</dt>
            <dd class="col-sm-9">@Model.TextoComentario</dd>

            <dt class="col-sm-3">Valoración</dt>
            <dd class="col-sm-9">@Model.Valoracion / 5</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>

<form asp-action="EliminarConfirmado" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>